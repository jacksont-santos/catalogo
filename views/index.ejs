    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>
<body>
    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>
    <nav>
        <article>
            <img src="" alt="">
            <h1><a href="/">noName</a></h1>
        </article>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/criar">Cadastrar</a></li>
        </ul>
    </nav>
        <section class="main-container" >
      <div class="location" id="home">
            <% listafilme.forEach(item => { %>
            <div class="box">
                <a href="/details/<%= item.id %>"><img src=<%= item.imagem %> alt=""></a>
                <figcaption><%= item.nome %></figcaption>
                <figcaption><%= item.genero %></figcaption>
                <a href="/editar/<%= item.id %>"> Editar</a>
            </div>
            <% }) %>
          </div>
      <script src="/js/script.js"></script>
</body>
</html>